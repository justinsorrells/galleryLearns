extends layout 

block content 
    h1 #{title}

    form(method='POST' action='')
        div.form-group 
            label(for="email")
            input#email.form-control(type="email", name="email" placeholder="Your@Email.com")
        div.form-group
            label(for="username")
            input#username.form-control(type="text", name="username" placeholder="Username")
        div.form-group
            label(for="password")
            input#password.form-control(type="password", name="password" placeholder="Password")
        button.btn.btn-primary(type="submit") Submit

    if errors
        ul 
            for error in errors 
                li!= error.msg