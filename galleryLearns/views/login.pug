extends layout 

block content 
    div.d-flex.flex-row.justify-content-between.align-items-center
        h1 #{title}
        form(method='GET' action='/users/create' target="_blank")
            button.btn.btn-secondary(style="margin: 1rem 1rem;") Create Profile
    form(method='POST' action='')
        div.form-group
            label(for='username')
            input#username.form-control(type="text", name="username", placeholder="username")
            label(for='password')
            input#password.form-control(type="password", name="password", placeholder="password")
        button.btn.btn-primary(type="submit" style="margin: 1rem 0;") Submit

    
    if errors 
        ul 
            for error in errors 
                li!= error.msg