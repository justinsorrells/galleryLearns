extends layout 

block content 
    script(type="module" src="/javascript/markdownPreviewer.js")
    script(src="https://cdn.jsdelivr.net/npm/marked/marked.min.js")
    h1= title
    
    form(method='POST' action='')
            div.form-group 
                label(for="title") Title
                input#title.form-control(type="text" value=(result ? (result.title ? result.title : "Title") : "Title") name="title")
            div.form-group 
                label(for="category") Category
                select#category.form-control(type="text" name="category")
                    option 
                    option(value="Web") Web
                    option(value="Real Programming Language") Real Programming Language
                    option(value="Test") Test
            div.form-group 
                label(for="summary")
                input#summary.form-control(type="text" value=(result ? (result.summary ? result.summary : "Summary") : "Summary") name="summary")
            div.form-group 
                label(for="headerImg")
                input#headerImg.form-control(type="text" value=(result ? (result.headerImg ? result.headerImg : "Link to Header Image") : "Link to Header Image") name="headerImg")
            div.form-group 
                label(for="content")
                textarea#content.form-control(rows="4" name="content")!= result ? (result.content ? result.content : "Place markdown here") : "Place markdown here"
            button.btn.btn-primary(type="submit") Submit

    div#preview.container(style="width: 100%; height: 500px; border: 1px solid black;")